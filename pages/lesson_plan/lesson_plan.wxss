.hide{
 display: none;
}
.show{ 
 margin-top: 10px;
 display: block;
}
view,text{
  box-sizing: border-box;
}

.lesson-top{
  width: 100%;
  height: 900rpx;
  position: relative;
}
.lesson-top image{
  width: 100%;
  height: 822rpx;
}
.lesson-top .con-top{
  width: 100%;
  height: 72rpx;
