.date-box{
  margin-top: 50rpx;
  width: 100%;
  padding:0 51rpx;
}
.date-top-box{
  padding:50rpx 0 0 6rpx;
  clear: both;
  overflow: hidden;
}
.no-good{
  color: #a2a2a2;
}
.date-top-box01{
  border-top: 2rpx solid #b8b8b8;
}
.date-top-box .left{
  margin-top: 20rpx;
  float:left;
  position: relative;
  width: 96rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
}
.date-top-box .left image{
  width: 96rpx;
  height: 96rpx;
}
.date-top-box .left .date{
  color: #fff;
  font-size: 40rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
}
.date-top-box .right{
  float:left;
  margin-left: 14rpx;
  width: calc(100% - 110rpx);
}
.pull-left{
  float: left;
}
.pull-right{
  float: right;
}
.clearfix{
  clear:both;
  overflow: hidden;
}
.date-top-box .num{
  display: block;
  font-size: 70rpx;
  color: #D0CFCF ;
}
.date-top-box .time{
  margin-top: -10rpx;
  display: block;
  font-size: 24rpx;

}
.date-top-box .thing{
