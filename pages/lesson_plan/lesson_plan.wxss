  position: absolute;
  top: 0;
  left:0;
  clear: both;
}
.lesson-top .con-top text{
  margin-left: 22rpx;
  float: left;
  font-size: 28rpx;
  color: #fff;
}
.lesson-top .con-top .right{
  float: right;
}
.lesson-top .con-top .right text{
  font-size: 24rpx;
  color: #FFCFA3;
}
.lesson-top .con-top .right image{
  margin:0 26rpx 0 9rpx;
  width: 15rpx;
  height: 25rpx;
}
.icon-box{
  width: 330rpx;
  height: 220rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  clear: both;
}
.icon-item{
  float: left;
  width: 130rpx;
