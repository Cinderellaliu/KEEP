  height: 19rpx;
}
.lesson-btn{
  margin: 0 auto 23rpx;
  width: 510rpx;
  height: 77rpx;
  line-height: 77rpx;
  text-align: center;
  font-size: 36rpx;
  border-radius: 43rpx;
  border: 1px solid #B7B7B7;
  background: #FFFFFF;
  box-sizing: border-box;
}
.bg-orange{
  background: #FF903D;
  border: 0;
